<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8F5E9"
    tools:context=".PlantDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_marginTop="50dp">

        <ImageView
            android:id="@+id/plant_detail_image"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            android:src="@drawable/snake_plant" />

        <ImageView
            android:id="@+id/favorite_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="end"
            android:layout_margin="8dp"
            android:src="@drawable/ic_favorite_border"
            android:contentDescription="Favorite" />

        <TextView
            android:id="@+id/plant_detail_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Plant Name"
            android:textColor="#2E7D32"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/plant_detail_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="$24.99"
            android:textColor="#2E7D32"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/plant_detail_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Plant description goes here..."
            android:textColor="#000000"
            android:textSize="16sp" />

        <Button
            android:id="@+id/add_to_cart_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Add to Cart"
            android:backgroundTint="#2E7D32"
            android:textColor="#FFFFFF" />
    </LinearLayout>
</ScrollView>